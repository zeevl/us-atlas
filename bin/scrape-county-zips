getStateLinks = (callback) ->
  request.get 'http://www.zipcodestogo.com/ZIP-Codes-by-State.htm', (err, res, data) ->
    throw err if err

    links = []
    $('.listStates a.stateLink', data).each ->
      links.push name: $(this).text(), href: $(this).attr('href')

    callback null, links

